{
  "permissions": {
    "allow": [
      "// Windows通知用PowerShellコマンドのみ許可",
      "Bash(powershell -c \"Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "mcp__supabase__execute_sql",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(systemctl:*)",
      "Bash(service:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(pip uninstall:*)",
      "Bash(pip install --force-reinstall:*)",
      "Bash(apt:*)",
      "Bash(yum:*)",
      "Bash(brew:*)",
      "Bash(winget:*)",
      "Bash(cmd:*)",
      "Write(**/bin/**)",
      "Write(**/sbin/**)",
      "Write(/etc/**)",
      "Write(/var/**)",
      "Write(/usr/**)",
      "Write(/opt/**)",
      "Write(/System/**)",
      "Write(/Windows/**)",
      "Write(/Program Files/**)",
      "Write(C:\\Windows\\**)",
      "Write(C:\\Program Files\\**)",
      "Write(C:\\ProgramData\\**)",
      "Read(/etc/passwd)",
      "Read(/etc/shadow)",
      "Read(/etc/sudoers)",
      "Read(**/.ssh/**)",
      "Read(**/config.json)",
      "Read(**/credentials.json)",
      "Read(**/*password*)",
      "Read(**/*secret*)",
      "Bash(eval:*)",
      "Bash(exec:*)",
      "Bash(sh -c:*)",
      "Bash(bash -c:*)",
      "Bash(python -c:*)",
      "Bash(node -e:*)",
      "Bash(ruby -e:*)",
      "Bash(dd:*)",
      "Bash(fdisk:*)",
      "Bash(mount:*)",
      "Bash(umount:*)",
      "Bash(crontab:*)",
      "Bash(at:*)",
      "Bash(scp:*)",
      "Bash(ssh:*)",
      "Bash(ftp:*)",
      "Bash(telnet:*)",
      "Bash(netstat:*)",
      "Bash(ss:*)",
      "Bash(iptables:*)",
      "Bash(ufw:*)",
      "Bash(firewall-cmd:*)",
      "Bash(openssl:*)",
      "Bash(gpg:*)",
      "Bash(gpg2:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "type": "command",
        "command": "powershell -c \"Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('Claude Codeが応答を待っています', 'Claude Code')\""
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "type": "command",
        "command": "echo \"$(date): $(echo '$TOOL_INPUT' | jq -r '.command')\" >> ~/claude-commands.log"
      }
    ]
  }
}