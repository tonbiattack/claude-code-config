{
  "permissions": {
    "allow": [
      "// 通知用コマンドのみ許可",
      "Bash(echo *)",
      "Bash(notify-send *)",
      "Bash(osascript *)"
    ],
    "deny": [
      "// 危険なシステム操作",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(systemctl:*)",
      "Bash(service:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)",
      "// Git操作（コミット・プッシュ等）",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "// 機密情報へのアクセス",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*password*)",
      "Read(**/*secret*)",
      "Read(**/.ssh/**)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "// 危険なコマンド実行",
      "Bash(eval:*)",
      "Bash(exec:*)",
      "Bash(sh -c:*)",
      "Bash(bash -c:*)",
      "Bash(python -c:*)",
      "Bash(node -e:*)",
      "Bash(ruby -e:*)",
      "// ディスク・ファイルシステム操作",
      "Bash(dd:*)",
      "Bash(fdisk:*)",
      "Bash(mount:*)",
      "Bash(umount:*)",
      "// システムファイル書き込み",
      "Write(/etc/**)",
      "Write(/var/**)",
      "Write(/usr/**)",
      "Write(/opt/**)",
      "Write(/System/**)",
      "Write(/Windows/**)",
      "Write(/Program Files/**)",
      "Write(C:\\Windows\\**)",
      "Write(C:\\Program Files\\**)",
      "Write(C:\\ProgramData\\**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -c \\\"Add-Content -Path '$env:USERPROFILE\\\\claude-commands.log' -Value \\\\\\\"$(Get-Date): $($env:TOOL_INPUT | ConvertFrom-Json | Select-Object -ExpandProperty command)\\\\\\\"\\\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Claude Code - 応答を待っています\""
          }
        ]
      }
    ]
  }
}